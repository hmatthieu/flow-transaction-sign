    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "target": "es2017",
    "outDir": "./dist",
    "baseUrl": "./src",
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}